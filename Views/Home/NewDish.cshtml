@using ChefsNDishes.Models;
@model Dish;
@{
    ViewData["Title"] = "Add Dish Page";
}
<div class="wrapper">
    <div class="header">
        <h1>Add a dish</h1>
    </div>
    <a href="/">Home</a>
    <form asp-action="AddDish" asp-controller="Home" method="POST">
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control">
            <span asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description"></span>
        </div>
        <div class="form-group">
            <label asp-for="ChefId" class="control-label"></label>
            <select class="form-control" asp-for="ChefId">
            @{
                foreach (var chef in @ViewBag.allchefs)
                {
                <option value = "@chef.ChefId">@chef.FirstName @chef.LastName</option>
                }
            }
            </select>
        </div>
        <div class="form-group">
            <label asp-for="Tastiness" class="control-label"></label>
            <select class="form-control" asp-for="Tastiness">
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
            </select>           
            <span asp-validation-for="Tastiness"></span>
        </div>
        <input type="submit" />
    </form>
</div>